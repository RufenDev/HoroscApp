<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HoroscApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/primaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">@color/primaryDark</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="DetailsTheme" parent="Base.Theme.HoroscApp">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <!-- MAIN STYLES -->
    <style name="PrimaryStyle">
        <item name="android:fontFamily">@font/redressed</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="BottomTitleStyle" parent="PrimaryStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarTitleStyle" parent="PrimaryStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HoroscopeTitleStyle" parent="PrimaryStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DetailsTitleStyle" parent="HoroscopeTitleStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/details</item>
    </style>

    <!-- PREDICTION STYLE -->

    <style name="SecondaryStyle">
        <item name="android:fontFamily">@font/playfair_display</item>
        <item name="android:textColor">@color/prediction</item>
    </style>

    <style name="PredictionTitleStyle" parent="SecondaryStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="PredictionStyle" parent="SecondaryStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- LUCK STYLE -->

    <style name="TestLuckTitleStyle" parent="HoroscopeTitleStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16sp</item>
    </style>

    <style name="TestLuckSubtitleStyle" parent="LuckPredictionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:visibility">visible</item>

    </style>

    <style name="LuckPredictionStyle" parent="PredictionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LuckShareStyle">
        <item name="android:fontFamily">@font/playfair_display</item>
        <item name="android:textColor">@color/details</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="LuckTryAgainStyle" parent="LuckShareStyle">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="LuckyCardStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-160dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>