<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HoroscApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/primaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">@color/primaryDark</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="DetailsTheme" parent="Base.Theme.HoroscApp">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="AccentStyle">
        <item name="android:fontFamily">@font/redressed</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="BottomTitleStyle" parent="AccentStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarTitleStyle" parent="AccentStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HoroscopeTitleStyle" parent="AccentStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DetailsTitleStyle" parent="HoroscopeTitleStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/details_accent</item>
    </style>

    <style name="HoroscopeDetailsStyle" parent="BottomTitleStyle">
        <item name="android:textColor">@color/details_accent</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>